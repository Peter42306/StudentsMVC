@model StudentsMVC.Models.Movie

@{
	ViewData["Title"] = "Delete";
	Layout = "/Views/Shared/_Layout.cshtml";
}

<div style="padding-top:30px; margin-bottom:20px;">
	<h1 class="text-lg-center; text-muted;">Это страница Views/Movie/Delete</h1>
	<hr />
	
	<div class="row">
		<div class="col-md-6">
			<div class="card">
				<img src="@Url.Content(Model.PosterPath)" alt="Movie Poster" class="card-img-top" />
			</div>
		</div>
		<div class="col-md-6">
			<table class="table">
				<tr>
					<td>Название фильма</td>
					<td>@Model.Title</td>
				</tr>
				<tr>
					<td>Жанр</td>
					<td>@Model.Genre</td>
				</tr>
				<tr>
					<td>Год выпуска</td>
					<td>@Model.ReleaseYear</td>
				</tr>
				<tr>
					<td>Краткое описание</td>
					<td>@Model.Description</td>
				</tr>
			</table>
		</div>
	</div>
	<h3>Are you sure you want to delete this?</h3>
	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Удалить" class="btn btn-danger" />
	</form>
	<div style="margin-top:20px">
		<a href="@Url.Action("Index","Movie")" class="btn btn-primary">Вернуться на домашнюю страницу</a>
	</div>	

